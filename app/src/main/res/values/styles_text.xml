<resources>

    <!--
        Defaults
    -->
    <style name="TextAppearance.WeatherXM.Default.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <style name="TextAppearance.WeatherXM.Default.HeadlineSmall.SansSerifMedium" parent="TextAppearance.WeatherXM.Default.HeadlineSmall">
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.WeatherXM.Default.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.WeatherXM.Default.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.WeatherXM.Default.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <style name="TextAppearance.WeatherXM.Default.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <style name="TextAppearance.WeatherXM.Default.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <style name="TextAppearance.WeatherXM.Default.PrimaryColor" parent="TextAppearance.WeatherXM.Default.BodyMedium">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--
        Toolbar
    -->
    <style name="TextAppearance.WeatherXM.Toolbar.Subtitle" parent="TextAppearance.WeatherXM.Default.HeadlineSmall">
        <item name="android:textSize">12sp</item>
    </style>

    <!--
        Explorer
    -->
    <style name="TextAppearance.WeatherXM.Explorer.DevicesCount.Title" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">@color/explorer_devices_count_title</item>
    </style>

    <style name="TextAppearance.WeatherXM.Explorer.DevicesCount.Value" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">@color/explorer_devices_count_value</item>
        <item name="fontFamily">monospace</item>
        <item name="fontWeight">700</item>
    </style>

    <!--
        Devices List
    -->
    <style name="TextAppearance.WeatherXM.Devices.List.LastSeen" parent="TextAppearance.WeatherXM.Default.BodyLarge">
        <item name="android:textColor">@color/colorOnSurfaceVariant</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.WeatherXM.Devices.List.Name" parent="TextAppearance.WeatherXM.Default.BodyLarge">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.WeatherXM.Devices.List.TokensTitle" parent="TextAppearance.WeatherXM.Default.BodyLarge">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.WeatherXM.Devices.List.Tokens" parent="TextAppearance.WeatherXM.Default.BodyLarge">
        <item name="android:lines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">8sp</item>
        <item name="autoSizeMaxTextSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.WeatherXM.Devices.List.WeatherData" parent="TextAppearance.WeatherXM.Default.BodyLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--
        Device Details
    -->
    <style name="TextAppearance.WeatherXM.Device.Details.Title" parent="@style/TextAppearance.WeatherXM.Default.HeadlineSmall.SansSerifMedium">
        <item name="android:textColor">@color/colorOnBackground</item>
    </style>

    <style name="TextAppearance.WeatherXM.Device.Details.Subtitle" parent="@style/TextAppearance.WeatherXM.Default.HeadlineSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorOnBackground</item>
    </style>

    <style name="TextAppearance.WeatherXM.Device.Details.Address" parent="@style/TextAppearance.WeatherXM.Device.Details.Subtitle">
        <item name="android:alpha">0.8</item>
    </style>

    <!--
        Weather Card
    -->
    <style name="TextAppearance.WeatherXM.WeatherCard" parent="TextAppearance.WeatherXM.Default.HeadlineSmall.SansSerifMedium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.WeatherXM.WeatherCard.Temperature" parent="TextAppearance.WeatherXM.WeatherCard">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">48sp</item>
        <item name="autoSizeMinTextSize">24sp</item>
    </style>

    <style name="TextAppearance.WeatherXM.WeatherCard.Data" parent="TextAppearance.WeatherXM.WeatherCard">
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">16sp</item>
        <item name="autoSizeMinTextSize">12sp</item>
    </style>

    <style name="TextAppearance.WeatherXM.WeatherCard.Data.Subtitle" parent="TextAppearance.WeatherXM.WeatherCard">
        <item name="android:textColor">@color/weather_card_data_subtitle</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.WeatherXM.WeatherCard.Timezone" parent="TextAppearance.WeatherXM.WeatherCard">
        <item name="android:textColor">@color/light_mid_grey</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!--
        Token Card
    -->
    <style name="TextAppearance.WeatherXM.TokenCard" parent="TextAppearance.WeatherXM.Default.HeadlineSmall.SansSerifMedium">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.WeatherXM.TokenCard.Title" parent="TextAppearance.WeatherXM.TokenCard">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.WeatherXM.TokenCard.MaxReward" parent="TextAppearance.WeatherXM.TokenCard">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.WeatherXM.TokenCard.TokenValue" parent="TextAppearance.WeatherXM.TokenCard">
        <item name="android:lines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">24sp</item>
        <item name="autoSizeMinTextSize">8sp</item>
    </style>

    <style name="TextAppearance.WeatherXM.TokenCard.RewardScore" parent="TextAppearance.WeatherXM.TokenCard">
        <item name="android:lines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">12sp</item>
        <item name="autoSizeMinTextSize">10sp</item>
    </style>

    <style name="TextAppearance.WeatherXM.TokenCard.RewardTimestamp" parent="TextAppearance.WeatherXM.TokenCard">
        <item name="android:lines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">12sp</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="TextAppearance.WeatherXM.TokenCard.Total" parent="TextAppearance.WeatherXM.TokenCard">
        <item name="android:textSize">10sp</item>
    </style>

    <!--
        Charts
    -->
    <style name="TextAppearance.WeatherXM.Chart.Title" parent="TextAppearance.WeatherXM.Default.HeadlineSmall.SansSerifMedium">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.WeatherXM.Chart.MarkerView.Time" parent="TextAppearance.WeatherXM.Default.BodyLarge">
        <item name="android:textColor">@color/chart_popup_text_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.WeatherXM.Chart.MarkerView.Value" parent="TextAppearance.WeatherXM.Default.BodyLarge">
        <item name="android:textColor">@color/chart_popup_text_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--
        Forecast Screen
    -->
    <style name="TextAppearance.WeatherXM.Forecast.Day" parent="TextAppearance.WeatherXM.Default.BodyLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:lines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">16sp</item>
        <item name="autoSizeMinTextSize">8sp</item>
    </style>

    <style name="TextAppearance.WeatherXM.Forecast.Date" parent="TextAppearance.WeatherXM.Default.BodyLarge">
        <item name="android:textColor">@color/daily_forecast_date</item>
        <item name="android:lines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">12sp</item>
        <item name="autoSizeMinTextSize">8sp</item>
    </style>

    <style name="TextAppearance.WeatherXM.Forecast.Temperature.Max" parent="TextAppearance.WeatherXM.Default.BodyMedium">
        <item name="android:textStyle">bold</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:lines">1</item>
        <item name="autoSizeMinTextSize">8sp</item>
    </style>

    <style name="TextAppearance.WeatherXM.Forecast.Precipitation" parent="TextAppearance.WeatherXM.Default.BodyMedium">
        <item name="drawableStartCompat">@drawable/ic_weather_precip_prob_small</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="drawableTint">@color/daily_forecast_precipitation_probability</item>
        <item name="android:textColor">@color/daily_forecast_precipitation_probability</item>
        <item name="android:textStyle">bold</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">8sp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="TextAppearance.WeatherXM.Forecast.Temperature.Min" parent="TextAppearance.WeatherXM.Default.BodySmall">
        <item name="autoSizeTextType">uniform</item>
        <item name="android:lines">1</item>
        <item name="autoSizeMinTextSize">8sp</item>
    </style>

    <!--
        Transaction Screen
    -->
    <style name="TextAppearance.WeatherXM.Transaction.Reward" parent="TextAppearance.WeatherXM.Default.HeadlineSmall">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.WeatherXM.Transaction.Date" parent="TextAppearance.WeatherXM.Default.BodyLarge">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/token_transaction_date_color</item>
    </style>

    <style name="TextAppearance.WeatherXM.Transaction.Descriptions" parent="TextAppearance.WeatherXM.Default.BodyLarge">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/token_transaction_descriptions</item>
    </style>

    <style name="TextAppearance.WeatherXM.Transaction.Timestamp" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textStyle">italic</item>
        <item name="android:alpha">0.5</item>
    </style>

    <!--
        Claiming Screens
    -->
    <style name="TextAppearance.WeatherXM.Claim.InMap" parent="TextAppearance.WeatherXM.Default.TitleMedium">
        <item name="android:textColor">@color/dark_background</item>
    </style>

    <!--
        Hourly Card
    -->
    <style name="TextAppearance.WeatherXM.HourlyCard.Data" parent="TextAppearance.WeatherXM.Default.BodyLarge">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeMaxTextSize">14sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.WeatherXM.HourlyCard.Data.Precipitation" parent="TextAppearance.WeatherXM.Default.BodyLarge">
        <item name="android:textColor">@color/hourly_forecast_card_precipitation</item>
        <item name="drawableStartCompat">@drawable/ic_weather_precip_prob_extra_small</item>
        <item name="drawableTint">@color/hourly_forecast_card_precipitation</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">8sp</item>
        <item name="autoSizeMaxTextSize">12sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.WeatherXM.HourlyCard.Data.Time" parent="TextAppearance.WeatherXM.Default.BodyLarge">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">8sp</item>
        <item name="autoSizeMaxTextSize">12sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--
        Tabs
    -->
    <style name="TextAppearance.WeatherXM.Tabs" parent="TextAppearance.WeatherXM.Default.HeadlineSmall.SansSerifMedium">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--
        MaterialTextView above TextInput acting as title
    -->
    <style name="TextAppearance.WeatherXM.TextInput.Title" parent="TextAppearance.WeatherXM.Default.HeadlineSmall.SansSerifMedium">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.WeatherXM.TextInput.TitleMedium" parent="TextAppearance.WeatherXM.Default.HeadlineSmall.SansSerifMedium">
        <item name="android:textSize">16sp</item>
    </style>

    <!--
        Survey Prompt on Preferences Screen
    -->
    <style name="TextAppearance.WeatherXM.MaterialCard.Survey.Title" parent="TextAppearance.WeatherXM.Default.HeadlineSmall">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--
        EmptyView
    -->
    <style name="TextAppearance.WeatherXM.EmptyView.Title" parent="TextAppearance.WeatherXM.Default.TitleLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--
        Notice
    -->
    <style name="TextAppearance.WeatherXM.Notice" parent="TextAppearance.WeatherXM.Default.BodySmall">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!--
        Overlay Card
    -->
    <style name="TextAppearance.WeatherXM.OverlayCard.Error" parent="TextAppearance.WeatherXM.Default.BodySmall">
        <item name="android:textColor">@color/light_top</item>
        <item name="android:textColorLink">@color/light_top</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--
        Warning Text (used inside warning cards)
    -->
    <style name="TextAppearance.WeatherXM.Warning" parent="TextAppearance.WeatherXM.Default.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_top</item>
    </style>
</resources>
