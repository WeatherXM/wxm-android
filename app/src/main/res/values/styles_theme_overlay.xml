<resources>

    <style name="ThemeOverlay.WeatherXM.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="colorSurface">@color/transparent</item>
    </style>

    <style name="ThemeOverlay.WeatherXM.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="colorSurface">@color/bottomSheetDialog_background</item>
        <item name="bottomSheetStyle">@style/Widget.WeatherXM.BottomSheet.Dialog</item>
    </style>

    <style name="ThemeOverlay.WeatherXM.BottomSheetDialog.Explorer.Devices" parent="ThemeOverlay.WeatherXM.BottomSheetDialog">
        <item name="colorSurface">@color/bottomSheetDialog_background</item>
    </style>

    <style name="ThemeOverlay.WeatherXM.Toolbar" parent="ThemeOverlay.Material3.Toolbar.Surface">
        <item name="colorSurface">@color/transparent</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="navigationIconTint">@color/colorPrimary</item>
    </style>

    <style name="ThemeOverlay.WeatherXM.AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/Widget.WeatherXM.AlertDialog.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/Widget.WeatherXM.AlertDialog.Body</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.WeatherXM.AlertDialog.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.WeatherXM.AlertDialog.Button.Negative</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.WeatherXM.AlertDialog.Button.Neutral</item>
    </style>
</resources>
