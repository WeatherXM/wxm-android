    <style name="TextAppearance.WeatherXM.Notice" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white_translucent</item>
    </style>

    <style name="Widget.WeatherXM.MaterialCard.Notice" parent="Widget.WeatherXM.MaterialCard">
        <item name="cardBackgroundColor">@color/error</item>
    </style>
