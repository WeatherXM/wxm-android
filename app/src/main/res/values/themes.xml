<resources>

    <style name="Theme.WeatherXM" parent="@style/Theme.Material3.Light.NoActionBar">
        <!-- Default background color -->
        <item name="android:windowBackground">@color/background_color</item>

        <!-- Brand colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSurface">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- System UI styles -->
        <item name="android:windowTranslucentStatus">@bool/use_transparent_status_bar</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>

        <!-- Style overrides -->
        <item name="appBarLayoutStyle">@style/Widget.WeatherXM.AppBar</item>
        <item name="toolbarStyle">@style/Widget.WeatherXM.ToolBar</item>
        <item name="progressBarStyle">@style/Widget.WeatherXM.ProgressBar.Horizontal</item>
        <item name="linearProgressIndicatorStyle">@style/Widget.WeatherXM.ProgressBar.Horizontal</item>
        <item name="bottomNavigationStyle">@style/Widget.WeatherXM.BottomNavigationView</item>
        <item name="materialButtonStyle">@style/Widget.WeatherXM.Button</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.WeatherXM.ButtonBar.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.WeatherXM.ButtonBar.Button.Subtle</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.WeatherXM.ButtonBar.Button.Subtle</item>
        <item name="materialCardViewElevatedStyle">@style/Widget.WeatherXM.MaterialCard</item>
        <item name="materialCardViewStyle">?materialCardViewElevatedStyle</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="tabStyle">@style/Widget.WeatherXM.TabLayout</item>
    </style>

    <style name="Theme.WeatherXM.Splash">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.WeatherXM.Explorer" parent="@style/Theme.Material3.Dark.NoActionBar">
        <!-- Brand colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/natural_black</item>

        <!-- System UI styles -->
        <item name="android:windowTranslucentStatus">@bool/use_transparent_status_bar</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>

        <!-- Style overrides -->
        <item name="materialButtonStyle">@style/Widget.WeatherXM.Button</item>
        <item name="materialCardViewElevatedStyle">@style/Widget.WeatherXM.MaterialCard</item>
        <item name="materialCardViewStyle">?materialCardViewElevatedStyle</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.WeatherXM.BottomSheetDialog</item>
        <item name="toolbarStyle">@style/Widget.WeatherXM.ToolBar.Explorer</item>
        <item name="appBarLayoutStyle">@style/Widget.WeatherXM.AppBar</item>
    </style>

    <style name="ThemeOverlay.WeatherXM.Toolbar.Light" parent="ThemeOverlay.MaterialComponents.Toolbar.Surface">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="ThemeOverlay.WeatherXM.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="colorSurface">@color/transparent</item>
    </style>

    <style name="ThemeOverlay.WeatherXM.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="colorSurface">@color/white</item>
        <item name="bottomSheetStyle">@style/Widget.WeatherXM.BottomSheet.Dialog</item>
    </style>

    <style name="ThemeOverlay.WeatherXM.Toolbar" parent="ThemeOverlay.Material3.Toolbar.Surface">
        <!--<item name="colorPrimary">@color/white</item>-->
        <item name="colorSurface">@color/transparent</item>
        <item name="colorOnSurface">@color/natural_black</item>
        <item name="navigationIconTint">@color/natural_black</item>
    </style>

    <style name="Widget.WeatherXM.AppBar.Transparent" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <!-- Make App Bar's background transparent -->
        <item name="android:background">@color/transparent</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.WeatherXM.Toolbar.Light</item>
    </style>

    <style name="Widget.WeatherXM.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:minHeight">54dp</item>
    </style>

    <style name="Widget.WeatherXM.Button.Purple" parent="@style/Widget.WeatherXM.Button">
        <item name="backgroundTint">@color/purple</item>
    </style>

    <style name="Widget.WeatherXM.Button.Link" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <!--<item name="android:textColor">?android:textColorSecondary</item>-->
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.WeatherXM.Button.Subtle" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.WeatherXM.Button.Subtle.Colored" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="cornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="Widget.WeatherXM.ButtonBar.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:minHeight">54dp</item>
    </style>

    <style name="Widget.WeatherXM.ButtonBar.Button.Subtle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:minHeight">54dp</item>
    </style>

    <style name="Widget.WeatherXM.TextButton.Subtle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.WeatherXM.TextButton.Subtle.Arrow" parent="@style/Widget.WeatherXM.TextButton.Subtle">
        <item name="android:textAllCaps">false</item>
        <item name="icon">@drawable/ic_next</item>
        <item name="iconGravity">end</item>
    </style>

    <style name="Widget.WeatherXM.BottomSheet.Dialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.WeatherXM.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.WeatherXM.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="TextAppearance.WeatherXM.Dialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">?colorOnSecondary</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.WeatherXM.Dialog.Subtitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/lastActiveColor</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.WeatherXM.Title.Headline_4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.WeatherXM.Profile.UserInfo" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="Widget.WeatherXM.Profile.Elements" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:minHeight">?listPreferredItemHeight</item>
        <item name="iconTint">@color/colorOnSecondary</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:gravity">start|center</item>
        <!--<item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>-->
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="iconPadding">@dimen/padding_normal</item>
    </style>

    <style name="TextAppearance.WeatherXM.HourlyCard.Data" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/hourly_forecast_texts_list</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.WeatherXM.HourlyCard.Data.Time" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/hourly_forecast_texts_list</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TextAppearance.WeatherXM.Updated.On" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.WeatherXM.Devices.List.Name" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.WeatherXM.Devices.List.TokensTitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.WeatherXM.Devices.List.Tokens" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.WeatherXM.Devices.List.WeatherData" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">20sp</item>
        <item name="drawableTint">@color/colorOnSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.WeatherXM.ToolBar" parent="Widget.Material3.Toolbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.WeatherXM.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.WeatherXM.Toolbar.Title</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.WeatherXM.Toolbar.Subtitle</item>
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
        <item name="contentInsetStart">@dimen/padding_normal</item>
        <item name="contentInsetStartWithNavigation">@dimen/padding_normal</item>
        <item name="contentInsetEnd">@dimen/padding_normal</item>
        <item name="contentInsetEndWithActions">@dimen/padding_normal</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Widget.WeatherXM.ToolBar.Explorer" parent="Widget.Material3.Toolbar.OnSurface">
        <item name="popupTheme">@style/ThemeOverlay.Material3.Dark</item>
    </style>

    <style name="Widget.WeatherXM.AppBar" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="TextAppearance.WeatherXM.Toolbar.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?colorOnSurface</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.WeatherXM.Toolbar.Subtitle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.WeatherXM.ProgressBar.Horizontal" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="progressBarStyle">?android:progressBarStyleHorizontal</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminate">true</item>
        <item name="minHeight">8dp</item>
    </style>

    <style name="Widget.WeatherXM.Status.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
    </style>

    <style name="Widget.WeatherXM.Token.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="ensureMinTouchTargetSize">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:checkable">true</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipStrokeColor">@color/tokenChipStrokeColor</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">@dimen/token_chip_corner_radius</item>
        <item name="chipSurfaceColor">@color/tokenChartBackground</item>
        <item name="chipBackgroundColor">@color/token_chip_background_list</item>
    </style>

    <style name="Widget.WeatherXM.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/bottom_navigation_shape</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>

    <style name="TextAppearance.WeatherXM.Paragraph.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?colorOnSurface</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.WeatherXM.WeatherCard" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.WeatherXM.WeatherCard.Temperature" parent="TextAppearance.WeatherXM.WeatherCard">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="TextAppearance.WeatherXM.WeatherCard.Data" parent="TextAppearance.WeatherXM.WeatherCard">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.WeatherXM.WeatherCard.Data.Subtitle" parent="TextAppearance.WeatherXM.WeatherCard">
        <item name="android:textColor">@color/subtitle</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.WeatherXM.Device.Details.Time" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.WeatherXM.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.WeatherXM.TabLayout</item>
        <item name="tabMode">scrollable</item>
        <item name="tabTextAppearance">@style/TextAppearance.WeatherXM.Device.Details.Time</item>
        <item name="tabTextColor">@color/dateTabNormalTextColor</item>
        <item name="tabSelectedTextColor">@color/dateTabSelectedTextColor</item>
        <item name="tabPadding">@dimen/padding_extra_small</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>

    <style name="TextAppearance.WeatherXM.Device.Details.Active" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/lastActiveColor</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.WeatherXM.TokenCard" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.WeatherXM.TokenCard.Title" parent="TextAppearance.WeatherXM.TokenCard">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.WeatherXM.TokenCard.TokenValue" parent="TextAppearance.WeatherXM.TokenCard">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.WeatherXM.TokenCard.TokenName" parent="TextAppearance.WeatherXM.TokenCard">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.WeatherXM.MaterialCard" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <!--<item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardMaxElevation">@dimen/card_elevation</item>-->
        <item name="cardPreventCornerOverlap">false</item>
        <item name="contentPadding">@dimen/padding_large</item>
    </style>

    <style name="Widget.WeatherXM.MaterialCard.Small" parent="Widget.Material3.CardView.Filled">
        <item name="contentPadding">@dimen/padding_small</item>
    </style>

    <style name="Widget.WeatherXM.MaterialCard.Weather" parent="Widget.WeatherXM.MaterialCard">
        <item name="cardBackgroundColor">@color/colorSecondary</item>
    </style>

    <style name="Widget.WeatherXM.MaterialCard.Tokens" parent="Widget.WeatherXM.MaterialCard">
        <item name="cardBackgroundColor">@color/tokenChartBackground</item>
    </style>

    <style name="Widget.WeatherXM.MaterialCard.HourlyForecast" parent="Widget.WeatherXM.MaterialCard.Small">
        <item name="cardBackgroundColor">@color/hourly_forecast_background_list</item>
        <item name="android:stateListAnimator">@animator/weather_forecast_tile_elevation</item>
        <!--<item name="cardElevation">@dimen/card_elevation</item>-->
    </style>

    <style name="Widget.WeatherXM.MaterialCard.ChartMarker" parent="Widget.WeatherXM.MaterialCard.Small">
        <item name="cardBackgroundColor">@color/colorSecondary</item>
    </style>

    <style name="TextAppearance.WeatherXM.Card.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorPrimaryVariant</item>
    </style>

    <style name="TextAppearance.WeatherXM.Card.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.WeatherXM.Chart.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.WeatherXM.Chart.MarkerView.Time" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.WeatherXM.Chart.MarkerView.Value" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.WeatherXM.Forecast.Day" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorPrimaryVariant</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.WeatherXM.Forecast.Date" parent="TextAppearance.MaterialComponents.Body1">
        <!--<item name="android:textColor">@color/colorPrimary</item>-->
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.WeatherXM.Forecast.Temperature.Min" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/grey</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:lines">1</item>
    </style>

    <style name="TextAppearance.WeatherXM.Forecast.Temperature.Max" parent="TextAppearance.Material3.BodyMedium">
