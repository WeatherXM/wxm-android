<resources>

    <style name="Theme.WeatherXM" parent="@style/Theme.Material3.DayNight.NoActionBar">
        <!-- Default background color -->
        <item name="android:windowBackground">@color/colorBackground</item>

        <!-- Brand colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorPrimaryContainer">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorSurfaceVariant">@color/colorSurfaceVariant</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnBackground">@color/colorOnSurface</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/light_top</item>

        <!-- System UI styles -->
        <item name="android:windowTranslucentStatus">@bool/use_transparent_status_bar</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>

        <!-- Style overrides -->
        <item name="appBarLayoutStyle">@style/Widget.WeatherXM.AppBar</item>
        <item name="toolbarStyle">@style/Widget.WeatherXM.ToolBar</item>
        <item name="popupTheme">@style/Widget.WeatherXM.PopupMenu</item>
        <item name="progressBarStyle">@style/Widget.WeatherXM.ProgressBar.Horizontal</item>
        <item name="linearProgressIndicatorStyle">@style/Widget.WeatherXM.ProgressBar.Horizontal
        </item>
        <item name="circularProgressIndicatorStyle">@style/Widget.WeatherXM.ProgressBar.Circular
        </item>
        <item name="bottomNavigationStyle">@style/Widget.WeatherXM.BottomNavigationView</item>
        <item name="materialButtonStyle">@style/Widget.WeatherXM.Button</item>
        <item name="materialCardViewElevatedStyle">@style/Widget.WeatherXM.MaterialCard</item>
        <item name="materialCardViewStyle">?materialCardViewElevatedStyle</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="tabStyle">@style/Widget.WeatherXM.TabLayout</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.WeatherXM.AlertDialog</item>
    </style>

    <style name="Theme.WeatherXM.Startup" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorBackground</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_background</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="postSplashScreenTheme">@style/Theme.WeatherXM</item>
    </style>

    <style name="Theme.WeatherXM.Explorer" parent="Theme.WeatherXM">
        <!-- System UI styles -->
        <item name="android:windowTranslucentStatus">@bool/use_transparent_status_bar</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="ShapeAppearance.WeatherXM.MyLocation" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">50dp</item>
        <item name="cornerSizeTopLeft">50dp</item>
        <item name="cornerSizeBottomRight">50dp</item>
        <item name="cornerSizeBottomLeft">50dp</item>
    </style>
</resources>
