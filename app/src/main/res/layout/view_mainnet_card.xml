<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mainnetCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            android:src="@drawable/weatherxm_gradient_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_normal_to_large">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/mainnetTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_checkmark_hex"
                android:drawablePadding="@dimen/padding_small"
                android:text="@string/mainnet_welcome"
                android:textAppearance="@style/TextAppearance.WeatherXM.Title"
                android:textColor="@color/dark_text"
                android:textSize="26sp"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/mainnetMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_small"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.WeatherXM.Default.BodyMedium"
                android:textColor="@color/dark_text"
                tools:text="Starting the 14th of February all station rewards are distributed on Abritrum Mainnet!\n\n Thank you for the support!" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</merge>
