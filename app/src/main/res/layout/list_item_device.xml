<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/deviceCardWithWarning"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_normal"
    android:layout_marginVertical="@dimen/card_vertical_margin"
    app:contentPadding="0dp"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/deviceCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/name"
                    style="@style/TextAppearance.WeatherXM.Default.PrimaryColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_normal"
                    app:layout_constraintBottom_toTopOf="@id/tokensLastDayTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="My Weather Station" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tokensLastDayTitle"
                    style="@style/TextAppearance.WeatherXM.Devices.List.TokensTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_normal"
                    android:text="@string/tokens_last"
                    app:layout_constraintBottom_toTopOf="@id/tokensTotalTitle"
                    app:layout_constraintStart_toStartOf="@id/name"
                    app:layout_constraintTop_toBottomOf="@id/name" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tokensLastDay"
                    style="@style/TextAppearance.WeatherXM.Devices.List.Tokens"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_small"
                    app:layout_constraintBaseline_toBaselineOf="@id/tokensLastDayTitle"
                    app:layout_constraintEnd_toStartOf="@id/icon"
                    app:layout_constraintStart_toEndOf="@id/tokensLastDayTitle"
                    tools:text="100 WXM" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tokensTotalTitle"
                    style="@style/TextAppearance.WeatherXM.Devices.List.TokensTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginEnd="@dimen/margin_normal"
                    android:text="@string/tokens_total"
                    app:layout_constraintBottom_toTopOf="@id/statusChip"
                    app:layout_constraintStart_toStartOf="@id/tokensLastDayTitle"
                    app:layout_constraintTop_toBottomOf="@id/tokensLastDayTitle" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tokensTotal"
                    style="@style/TextAppearance.WeatherXM.Devices.List.Tokens"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_small"
                    app:layout_constraintBaseline_toBaselineOf="@id/tokensTotalTitle"
                    app:layout_constraintEnd_toStartOf="@id/icon"
                    app:layout_constraintStart_toEndOf="@id/tokensTotalTitle"
                    tools:text="100 WXM" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/statusChip"
                    style="@style/Widget.WeatherXM.Chip.Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:text="@string/offline"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tokensTotalTitle" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/icon"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginEnd="@dimen/margin_normal"
                    android:layout_marginBottom="@dimen/margin_small"
                    app:layout_constraintBottom_toTopOf="@id/lastSeen"
                    app:layout_constraintEnd_toStartOf="@id/temperature"
                    app:layout_constraintTop_toBottomOf="@id/name"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    tools:background="#88212121"
                    tools:lottie_rawRes="@raw/anim_weather_clear_day" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/temperature"
                    style="@style/TextAppearance.WeatherXM.Devices.List.WeatherData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="26Â°C" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lastSeen"
                    style="@style/TextAppearance.WeatherXM.Devices.List.LastSeen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="5 minutes ago" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.weatherxm.ui.widget.WarningCardView
            android:id="@+id/warningBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/deviceCard"
            app:warning_message="@string/updated_needed_desc"
            app:warning_title="@string/updated_needed_title" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
