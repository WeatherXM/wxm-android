<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_small"
    android:clipChildren="false"
    android:clipToOutline="false"
    android:clipToPadding="false"
    tools:layout_height="160dp"
    tools:targetApi="s">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        style="@style/Widget.WeatherXM.MaterialCard.HourlyForecast"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/temperature"
                style="@style/TextAppearance.WeatherXM.HourlyCard.Data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                tools:text="26Â°C" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginVertical="@dimen/margin_extra_small"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerInside"
                app:lottie_autoPlay="false"
                app:lottie_loop="true"
                tools:background="#88212121"
                tools:lottie_rawRes="@raw/anim_weather_clear_day" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/precipitation"
                style="@style/TextAppearance.WeatherXM.HourlyCard.Data.Precipitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                tools:text="100.0 mm" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/time"
                style="@style/TextAppearance.WeatherXM.HourlyCard.Data.Time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:gravity="center_horizontal"
                tools:text="13:37 am" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
