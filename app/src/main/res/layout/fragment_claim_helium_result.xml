<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alternativeBackground"
    android:paddingBottom="@dimen/padding_normal">

    <com.weatherxm.ui.components.BleActionFlowView
        android:id="@+id/bleActionFlow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ble_action_flow_first_step="@string/setting_station_frequency"
        app:ble_action_flow_second_step="@string/rebooting_station"
        app:ble_action_flow_third_step="@string/claiming_station_step" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
